<h1>Edit Post</h1>

<form class="" action="/posts/<%= @post.id %>" method="post">
  <input type="hidden" name="_method" value="patch">
  <label for="rating">Rate your anxiety level today (1-5):</label>
  <input id="rating" type="text" name="rating" value="<%=@post.rating%>">
  <label for="content">Describe:</label>
  <textarea name="content" cols="50" rows="10"><%=@post.content%></textarea>
  <input type="submit" name="" value="Submit Post">
</form>
